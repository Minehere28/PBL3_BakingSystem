</html>
<script>
    // Hiệu ứng animation khi scroll
    document.addEventListener('DOMContentLoaded', function() {
        // Animation cho các section khi scroll đến
        const animateOnScroll = function() {
            const sections = document.querySelectorAll('.customer-experience, .partners, .about, .services, .achievements');

            sections.forEach(section => {
                const sectionTop = section.getBoundingClientRect().top;
                const windowHeight = window.innerHeight;

                if (sectionTop < windowHeight - 100) {
                    section.style.opacity = '1';
                    section.style.transform = 'translateY(0)';
                }
            });
        };

        // Thiết lập ban đầu
        const sections = document.querySelectorAll('.customer-experience, .partners, .about, .services, .achievements');
        sections.forEach(section => {
            section.style.opacity = '0';
            section.style.transform = 'translateY(30px)';
            section.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
        });

        // Kích hoạt khi scroll
        window.addEventListener('scroll', animateOnScroll);
        animateOnScroll(); // Chạy lần đầu khi load trang

        // Hiệu ứng hover cho các card
        document.querySelectorAll('.experience-item, .service-item, .achievement-item').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-10px)';
            });

            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });
    });
</script>
