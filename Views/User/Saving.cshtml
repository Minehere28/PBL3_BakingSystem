<script>
      // Tính toán lãi suất
    document.addEventListener('DOMContentLoaded', function() {
        const amountInput = document.getElementById('calc-amount');
        const termSelect = document.getElementById('calc-term');
        const calculateBtn = document.querySelector('.btn-calculate');
        const interestAmount = document.querySelector('.result-amount');
        const totalAmount = document.querySelector('.result-details .detail-item:last-child span:last-child');

        // Lãi suất theo kỳ hạn
        const interestRates = {
            '1': 5.0,
            '3': 6.2,
            '6': 7.0,
            '12': 8.5
        };

        // Tính toán khi nhấn nút
        calculateBtn.addEventListener('click', function() {
            const amount = parseFloat(amountInput.value) || 0;
            const term = termSelect.value;
            const rate = interestRates[term];

            if (amount > 0 && rate) {
                const interest = (amount * rate / 100 * term / 12).toFixed(0);
                const total = (amount + parseFloat(interest)).toFixed(0);

                // Format số tiền
                const formatNumber = num => num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");

                interestAmount.textContent = formatNumber(interest) + ' VND';
                totalAmount.textContent = formatNumber(total) + ' VND';
            }
        });

        // Tính toán ngay khi trang load với giá trị mặc định
        calculateBtn.click();
    });
</script>
