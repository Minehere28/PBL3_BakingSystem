<script>
    document.getElementById('calculateBtn').addEventListener('click', function() {
        const loanAmountInput = document.getElementById('loanAmount');
        const interestRateInput = document.getElementById('interestRate');
        const loanTermInput = document.getElementById('loanTerm');

        const loanAmount = parseFloat(loanAmountInput.value);
        const interestRate = parseFloat(interestRateInput.value);
        const loanTerm = parseFloat(loanTermInput.value); // Đây là biến đúng để sử dụng

        if (isNaN(loanAmount) || isNaN(interestRate) || isNaN(loanTerm) || loanAmount <= 0 || interestRate < 0 || loanTerm <= 0) { // Lãi suất có thể bằng 0
            alert('Vui lòng nhập các giá trị hợp lệ cho số tiền vay, lãi suất và thời hạn.');
            return;
        }

        const monthlyInterestRate = (interestRate / 100) / 12;

        let monthlyPayment = 0;
        let totalInterestPaid = 0;

        if (monthlyInterestRate === 0) { // Trường hợp lãi suất bằng 0
            monthlyPayment = loanAmount / loanTerm;
            totalInterestPaid = 0;
        } else {
            // Công thức tính số tiền trả hàng tháng (trả góp đều cả gốc và lãi)
            monthlyPayment = (loanAmount * monthlyInterestRate) / (1 - Math.pow(1 + monthlyInterestRate, -loanTerm));
            // Tổng lãi phải trả
            totalInterestPaid = (monthlyPayment * loanTerm) - loanAmount;
        }

        // Hiển thị kết quả:
        // Số tiền trả gốc hàng tháng (trung bình)
        document.getElementById('result-principal').textContent = (loanAmount / loanTerm).toLocaleString('vi-VN', {maximumFractionDigits: 0}) + ' VNĐ';
        // Số tiền trả lãi hàng tháng (trung bình)
        document.getElementById('result-interest').textContent = (totalInterestPaid / loanTerm).toLocaleString('vi-VN', {maximumFractionDigits: 0}) + ' VNĐ';
        // Tổng số tiền trả hàng tháng cố định
        document.getElementById('result-total').textContent = monthlyPayment.toLocaleString('vi-VN', {maximumFractionDigits: 0}) + ' VNĐ';
    });

    // Thêm hiệu ứng loading cho nút tính toán
    document.querySelector('.calculator-form button').addEventListener('click', function() {
        const button = this;
        // Kiểm tra xem input có hợp lệ không trước khi thêm loading
        const loanAmount = parseFloat(document.getElementById('loanAmount').value);
        const interestRate = parseFloat(document.getElementById('interestRate').value);
        const loanTerm = parseFloat(document.getElementById('loanTerm').value);

        if (isNaN(loanAmount) || isNaN(interestRate) || isNaN(loanTerm) || loanAmount <= 0 || interestRate < 0 || loanTerm <= 0) {
            // Không làm gì nếu input không hợp lệ, alert đã xử lý
            return;
        }

        button.classList.add('loading');
        setTimeout(() => {
            button.classList.remove('loading');
        }, 800); // 0.8 giây
    });
</script>
