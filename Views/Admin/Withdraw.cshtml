@model PBL3.Models.WithdrawViewModel
@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section MainContent {
	<div class="freeze-form-container">
		<h2>Rút tiền từ tài khoản</h2>
		<form asp-action="Withdraw" method="post">
			<div style="margin-bottom: 18px;">
				<label for="AccountId">Nhập ID tài khoản:</label>
				<input asp-for="AccountId" type="text" autocomplete="off" />
				<span asp-validation-for="AccountId" style="color: #d32f2f; font-size: 1rem;"></span>
			</div>

			<div style="margin-bottom: 18px;">
				<label for="Amount">Nhập số tiền cần rút:</label>
				<input asp-for="Amount" type="number" step="1000" min="1000" autocomplete="off" />
				<span asp-validation-for="Amount" style="color: #d32f2f; font-size: 1rem;"></span>
			</div>

			<div style="display: flex; align-items: center; gap: 12px; margin-top: 12px;">
				<button type="submit">Rút tiền</button>
			</div>
		</form> <!-- 👈 Đóng form tại đây mới hợp lý -->
		@if (ViewBag.Status != null)
		{
			<p style="color: #388e3c; font-weight: 500; margin-top: 12px;">@ViewBag.Status</p>
		}

		@if (ViewBag.Error != null)
		{
			@* <p style="color: #d32f2f; font-weight: 500; margin-top: 12px;">@ViewBag.Error</p> *@
			<div class="alert alert-danger" role="alert">@ViewBag.Error</div>
		}
	</div>
}

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
